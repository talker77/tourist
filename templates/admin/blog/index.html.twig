{% extends 'admin/singlegrid.html.twig' %}
{% set title =" Blog " %}

{% block grid %}
    <table class="table">
        <thead>
        <tr>
            <th>Blog</th>
            <th>slug</th>
            <th>createdAt</th>
        </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.title }}</td>
                <td>{{ blog.slug }}</td>
                <td>{{ blog.createdAt |date }}</td>
                <td>
                    <a href="{{ path('admin_blog_edit',{'blog':blog.id}) }}" class="btn btn-info">{{ 'edit' | trans }}</a>
                    <a href="{{ path('admin_blog_post_index',{'blog':blog.id}) }}" class="btn btn-inverse-success">{{ 'posts' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no blog found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('admin_blog_new') }}" class="btn btn-block btn-dark">Create New Block</a>
    </div>
{% endblock %}