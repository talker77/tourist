{% extends 'admin/singlegrid.html.twig' %}
{% block title %}Block{% endblock %}

{% block grid %}
    <h1>Block</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ block.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ block.title }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ block.createdAt ? block.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_block_index') }}">back to list</a>

    <a href="{{ path('admin_block_edit', {'id': block.id}) }}">edit</a>

    {{ include('admin/block/_delete_form.html.twig') }}
{% endblock %}
