<div class="content-viewport">
    <div class="row">
        <div class="col-md-12">
            <div class="grid">
                <div class="grid-header">User Settings</div>
                <div class="grid-body">
                    <div class="item-wrapper">
                        <form method="POST" action="{{ action }}" class="col-md-12 " enctype="multipart/form-data"
                              autocomplete="on">
                            {{ form_start(form) }}

                            {{ form_errors(form) }}

                            <div class="accordion accordion-filled" id="accordion-4" role="tablist">
                                <div class="card">
                                    <div class="card-header" role="tab" id="heading-4-2">
                                        <a class="collapsed" data-toggle="collapse" href="#collapse-4-2"
                                           aria-expanded="false" aria-controls="collapse-4-2">
                                            <i class="header-icon mdi mdi-newspaper"></i> User Add
                                        </a>
                                    </div>
                                    <div id="collapse-4-2" class="collapse show" role="tabpanel"
                                         aria-labelledby="heading-4-2" data-parent="#accordion-4">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    {{ form_label(form.username) }}
                                                    {{ form_widget(form.username) }}
                                                </div>
                                                <div class="col-md-6">
                                                    {{ form_label(form.email) }}
                                                    {{ form_widget(form.email) }}
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="col-md-6">
                                                    {{ form_label(form.enabled) }}
                                                    {{ form_widget(form.enabled) }}
                                                </div>
                                                <div class="col-md-6">
                                                    {{ form_label(form.roles) }}
                                                    {{ form_widget(form.roles) }}
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="col-md-6">
                                                    {{ form_label(form.password) }}
                                                    {{ form_widget(form.password) }}
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 mt-3">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_rest(form) }}
                            <hr>
                            <input type="submit" class="btn btn-primary float-right mb-3" id="submit"
                                   value="Save"/>
                            {{ form_end(form) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
