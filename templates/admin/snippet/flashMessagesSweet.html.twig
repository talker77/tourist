{% for flashMessage in app.session.flashbag.get('error') %}
    <script type="text/javascript">
        $(document).ready(function() {
            $.toast({
                text: "{{ flashMessage }}",
                icon: 'warning',
                allowToastClose: false,
                heading: 'Error!',
                position: 'top-right',
                loader: true,
                loaderBg: '#ed673c'
            })
        });
    </script>
{% endfor %}
