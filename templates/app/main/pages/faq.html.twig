{% extends 'app/base.html.twig' %}
{% block body %}

    {% if document.title1 or document.title2 %}
        <div class="text-center pt-4">
            <div class="container">
                <div class="row">
                    <div class="mx-auto col-md-12">
                        <h1 class="mb-3">{{ document.title1 }}</h1>
                        <p class="gr_text">{{ document.title2 }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="container mb-3 mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ document.pageName }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>



    <div class="container">
        <div class="bg_white white_box p-4 mb-4">
            <h4 class="mb-3 page-title text-center">{{ document.blockByFieldKey('title1') }}</h4>
            <div class="row">
                <div class="col-12 col-lg-6">
                    {{ document.blockByFieldKey('text1') | raw }}
                </div>


                <div class="col-12 col-lg-6">

                    <div class="video_img video_ist_item">
                        <a class="video-btn" href="{{ document.blockByFieldKey('video_url') }}">
                            <img class="d-block mx-auto" src="{{ document.blockByFieldKey('right_image') }}">
                        </a>
                    </div>

                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-12 col-md-12">
                <div class="white_box mb-4">
                    <div class="accordion_nested_container attraction_detail_faq ">
                        <h2 class="text-center">Most Popular Questions</h2>
                        {% for mostPopularFaq in mostPopularFaqs %}
                            <div class='nested-accordion'>
                                <h3>{{ mostPopularFaq.question | raw }}</h3>
                                <div class='comment faqTitle'>

                                    <p>{{ mostPopularFaq.answer | raw }}</p>

                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>
            </div>

            <div class="col-12 col-md-12">
                <div class="">
                    {{ render(controller(
                        'App\\Controller\\App\\PartialController::faq', {max: 3}
                    )) }}
                </div>
            </div>
        </div>
    </div>



    <div class="text-center py-4 bg_dark with_bg_image button_half mt-5 lazy" data-src="{{ asset('app/images/bg_img.jpg') }}">
        <div class="container">
            <div class="row">
                <div class="mx-auto col-md-12">
                    <h3 class="mb-3">The Best Istanbul Experiences, One Click Away</h3>
                    <p class="gr_text">Get free access to 60+ top attractions, tours, experiences, services and more with one
                        all-inclusive pass. </p><a class="btn btn-primary" href="{{ path('price') }}">Buy Now</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">

        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="text-center pt-4">
                    <div class="">
                        <div class="row">
                            {% include 'app/main/snip/review.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-6 offset-lg-3 mt-5">
                <div class="text-center py-4 footer_icons">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">

                                <div class="row">
                                    {% include 'app/main/snip/menu_pagebottom.twig' %}
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>


    </div>







{% endblock %}