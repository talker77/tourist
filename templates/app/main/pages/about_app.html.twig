{% extends 'app/base.html.twig' %}
{% block body %}

    {% if document.title1 or document.title2 %}
        <div class="text-center pt-4">
            <div class="container">
                <div class="row">
                    <div class="mx-auto col-md-12">
                        <h1 class="mb-3">{{ document.title1 }}</h1>
                        <p class="gr_text">{{ document.title2 }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="container mb-3 mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ document.pageName }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="">
                    <div class=" text-center">
                        <div class="">
                            <h4 class="mb-3 page-title text-center">{{ document.blockByFieldKey('title1') }}</h4>
                            <div class="row">
                                <div class="col-12">
                                    <div class="mb-4 text-center">
                                        <p>{{ document.blockByFieldKey('text1') }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-lg-6 offset-lg-3">
                                    <div class="text-center pb-4 download_container">
                                        <div class="container">
                                            <div class="row">
                                                <div class="mx-auto col-md-12">

                                                    <div class="dw-img">
                                                        <img data-src="{{ document.blockByFieldKey('image1') }}" srcset="{{ document.blockByFieldKey('image1') }} 1x, {{ asset('app/images/download_app@2x.png') }} 2x" class="d-block mx-auto mt-3 lazy">
                                                    </div>

                                                    <div class="text-center">
                                                        <a href="//apps.apple.com/us/app/istanbul-tourist-pass/id1182292559" target="_blank">
                                                        <img class="mr-2 lazy" data-src="{{ document.blockByFieldKey('image2') }}" srcset="{{ document.blockByFieldKey('image2') }} 1x, {{ asset('app/images/dw-google@2x.png') }} 2x">
                                                        </a>
                                                        <a href="//play.google.com/store/apps/details?id=com.goodbarber.touristpass&hl=en&gl=US" target="_blank">
                                                        <img class="ml-2 lazy" data-src="{{ document.blockByFieldKey('image3') }}" srcset="{{ document.blockByFieldKey('image3') }} 1x, {{ asset('app/images/dw-appstore@2x.png') }} 2x">
                                                        </a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-12 mt-3">
                                    <div class="text-left">
                                        <h3>{{ document.blockByFieldKey('title2') }}</h3>
                                        {{ document.blockByFieldKey('text2') | raw  }}
                                    </div>

                                    <div class="text-left">
                                        <h3>{{ document.blockByFieldKey('title3') }}</h3>
                                        {{ document.blockByFieldKey('text3') | raw  }}
                                    </div>


                                    <div class="text-left">
                                        <h3>{{ document.blockByFieldKey('title4') }}</h3>
                                        <p>{{ document.blockByFieldKey('text4') | raw }}</p>
                                    </div>
                                    <div class="text-left">
                                        <h3>{{ document.blockByFieldKey('title5') }}</h3>
                                        <p>{{ document.blockByFieldKey('text5') | raw }}</p>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-4">

                                <div class="col-12 col-md-5">

                                    <div class="video_img mb-4">
                                        <img class="d-block mx-auto lazy" data-src="{{ document.blockByFieldKey('image4') }}">
                                        <!---
                                        <a class="video-btn" href="{{ document.blockByFieldKey('videoUrl') }}">
                                            <img class="d-block mx-auto" src="{{ document.blockByFieldKey('videoImage') }}">
                                        </a>
                                        ---->
                                    </div>
                                </div>
                                <div class="col-12 col-md-7">
                                        {{ render(controller(
                                            'App\\Controller\\App\\PartialController::faq', {max: 3}
                                        )) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <div class="col-lg-12">

            <div class="row">
                <div class="col-12 col-lg-12">
                    <div class="text-center pt-4">
                        <div class="">
                            <div class="row">
                                {% include 'app/main/snip/review.html.twig' %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 offset-lg-3 mt-5">
                    <div class="text-center py-4 footer_icons">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">

                                    <div class="row">
                                        {% include 'app/main/snip/menu_pagebottom.twig' %}
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>
{% endblock %}