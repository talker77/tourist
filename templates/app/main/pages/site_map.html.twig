{% extends 'app/base.html.twig' %}
{% block body %}

    {% if document.title1 or document.title2 %}
        <div class="text-center pt-4">
            <div class="container">
                <div class="row">
                    <div class="mx-auto col-md-12">
                        <h1 class="mb-3">{{ document.title1 }}</h1>
                        <p class="gr_text">{{ document.title2 }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="container mb-3 mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Site Map</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="">
                    <div class=" text-center">
                        <div class="bg_white p-3 pb-4 text-left sitemap_content">

                            <div class="row">

                                {% set navigation = 'footer'|navigationTree %}
                                {% if navigation.items |length %}
                                    {% for parent,item in navigation.items.0 %}
                                        <div class="col-12 col-lg-4 col-md-6">
                                            <h4>{{ item.name }}</h4>
                                            <ul class="list-unstyled">
                                                {% if navigation.items[item.id] is defined %}
                                                    {% set subitems = navigation.items[item.id] %}
                                                    {% for subitem in subitems %}
                                                        <li>
                                                            <a href="{{ subitem| alink }}" title="{{ subitem.name }}"  class="{{ subitem.extraClass }}" >
                                                                {{ subitem.name }}
                                                            </a>
                                                        </li>
                                                    {% endfor %}
                                                {% endif %}
                                            </ul>
                                        </div>
                                    {% endfor %}
                                {% endif %}


                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">

        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="text-center pt-4">
                    <div class="">
                        <div class="row">
                            {% include 'app/main/snip/review.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-6 offset-lg-3 mt-5">
                <div class="text-center py-4 footer_icons">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">

                                <div class="row">
                                    {% include 'app/main/snip/menu_pagebottom.twig' %}
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>


    </div>
{% endblock %}