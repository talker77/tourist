{% extends 'app/base.html.twig' %}
{% block body %}
    {% if document.title1 or document.title2 %}
        <div class="text-center pt-4">
            <div class="container">
                <div class="row">
                    <div class="mx-auto col-md-12">
                        <h1 class="mb-3">{{ document.title1 }}</h1>
                        <p class="gr_text">{{ document.title2 }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="container mb-3 mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ document.pageName }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>


    <div class="row">

        <div class="col-12">
            <div class="text-center py-4 bg_white mb-4">
                <div class="container">
                    <div class="row">
                        <div class="mx-auto col-md-10 offset-md-1">
                            <h3 class="mb-3">{{ document.blockByFieldKey('VideoTitle1') | raw }}</h3>
                            <p class="gr_text">{{ document.blockByFieldKey('VideoTitle2') | raw }} </p>

                            <div class="row">
                                <div class="col-12 col-lg-7 order-lg-last">
                                    <div class="video_img my-3 mt-4 "><img class="lazy" data-src="{{ document.blockByFieldKey('newImage') }}"> </div>
                                    <!---
                                    <div class="video_img my-3 mt-4 video_ist_item">
                                        <a class="video-btn" href="{{ document.blockByFieldKey('video') }}">
                                            <img class="d-block mx-auto" src="{{ document.blockByFieldKey('leftImage') }}">
                                        </a>
                                    </div>
                                    ---->
                                </div>


                                <div class="col-12 col-lg-5 order-lg-first justify-content-center align-self-center">
                                    <div class="video_list_bt" style="vertical-align: top">
                                        {{ document.blockByFieldKey('stepDescription') | raw }}
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="container">
        <p>{{ document.blockByFieldKey('seoText') | raw }}</p>
        <div class="bg_white white_box p-4 mb-4 how-works-item">
            <h3>{{ document.blockByFieldKey('title1')  }}</h3>
            <div class="row">
                <div class="col-12 col-md-6">
                    <img class="lazy" data-src="{{ document.blockByFieldKey('image1') | raw }}">
                </div>
                <div class="col-12 col-md-6">
                    <p>{{ document.blockByFieldKey('text1') | raw  }}</p>
                </div>

            </div>


            <h3 class="mt-5">{{ document.blockByFieldKey('title2') | raw  }}</h3>

            <div class="row">


                <div class="col-12 col-md-6">
                    <p>{{ document.blockByFieldKey('text2') | raw  }}</p>
                </div>

                <div class="col-12 col-md-6">

                    <img class="lazy" data-src="{{ document.blockByFieldKey('image2') }}">

                </div>

            </div>


            <h3 class="mt-5">{{ document.blockByFieldKey('title3') | raw  }} </h3>

            <div class="row">
                <div class="col-12 col-md-6">

                    <img class="lazy" data-src="{{ document.blockByFieldKey('image3') }}">

                </div>

                <div class="col-12 col-md-6">
                    <p>{{ document.blockByFieldKey('text3') | raw  }}</p>
                </div>

            </div>

            <h3 class="mt-5">{{ document.blockByFieldKey('title4') | raw  }} </h3>
            <div class="row">
                <div class="col-12 col-md-6">
                    <p>{{ document.blockByFieldKey('text4') | raw  }}</p>
                </div>

                <div class="col-12 col-md-6">
                    <img class="lazy" data-src="{{ document.blockByFieldKey('image0') }}" alt="">
                </div>
            </div>
        </div>
    </div>
    <div class="red_box p-4 my-4 text-light text-center">
        <h3>{{ document.blockByFieldKey('bannerText0') | raw }} <img class="lazy" data-src="{{ document.blockByFieldKey('bannerImage') }}"></h3>

        <hr class="hr_light">

        <div class="ms-slider-cont">
            <h5>free</h5>

            <div class="ms-slider">
                <div class="ms-slider__words rotating-text">

                    <div id="js-rotating">{{ document.blockByFieldKey('bannerText') | raw }}</div>

                </div>
            </div>

        </div>

    </div>
    <div class="col-lg-12">

        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="text-center pt-4">
                    <div class="">
                        <div class="row">
                            {% include 'app/main/snip/review.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-6 offset-lg-3 mt-5">
                <div class="text-center py-4 footer_icons">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">

                                <div class="row">
                                    {% include 'app/main/snip/menu_pagebottom.twig' %}
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>


    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $(".img").each(function () {
                $(this).height(($(this).parent().children('.content').innerHeight()));
            });
        });
    </script>
{% endblock %}