{% extends 'app/base.html.twig' %}
{% block body %}
    {% if document.title1 or document.title2 %}
        <div class="text-center pt-4">
            <div class="container">
                <div class="row">
                    <div class="mx-auto col-md-12">
                        <h1 class="mb-3">{{ document.title1 }}</h1>
                        <p class="gr_text">{{ document.title2 }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}


    <div class="container mb-3 mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ document.pageName }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3 class="text-center mb-4">{{ document.blockByFieldKey('title1') | raw  }}</h3>
                <div class="row">
                {% for mediatblog in mediaBlogs %}

                    <div class="col-3 col-md-3 col-xs-6" style="margin-bottom: 20px">
                        <div class="bg_white p-1 text-center" style="height: 100%; min-width: 100%">
                            <a target="_blank" href="{{ mediatblog.body | striptags }}">
                                <img data-src="{{ mediatblog.featureImage }}" class="img-fluid lazy">
                            </a>
                        </div>
                    </div>
                {% endfor %}

                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4 mb-5">
        <div class="row">

            <div class="col-lg-12">

                <div class="row">
                    <div class="col-12 col-lg-12">
                        <div class="text-center pt-4">
                            <div class="">
                                <div class="row">
                                    {% include 'app/main/snip/review.html.twig' %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 offset-lg-3 mt-5">
                        <div class="text-center py-4 footer_icons">
                            <div class="container">
                                <div class="row">
                                    <div class="col-12">

                                        <div class="row">
                                            {% include 'app/main/snip/menu_pagebottom.twig' %}
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>

{% endblock %}