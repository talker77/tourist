{% extends 'app/base.html.twig' %}
{% block body %}

    {% if document.title1 or document.title2 %}
    <div class="text-center pt-4">
        <div class="container">
            <div class="row">
                <div class="mx-auto col-md-12">
                    <h1 class="mb-3">{{ document.title1 }}</h1>
                    <p class="gr_text">{{ document.title2 }}</p>
                </div>
            </div>
        </div>
    </div>
    {% endif %}



    <div class="container mb-3 mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ document.pageName }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="container text-center">
        <h4 class="mb-3 page-title">{{ document.blockByFieldKey('headtitle') }}</h4>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6">
                <img data-src="{{ document.blockByFieldKey('image1') }}" alt="" class="mb-4 lazy">
            </div>
            <div class="col-12 col-md-6">
                <div class="bg_white white_box p-4 more-box">
                    <div class="desc-wrapper no-more-for-desc">
                        <div class="desc">
                            <p>{{ document.blockByFieldKey('text1') }}</p>
                        </div>
                    </div>
                    <button class="more-info btn btn-primary"><span class="more">More <i class="fa fa-chevron-down"></i></span><span class="less">Less  <i class="fa fa-chevron-up"></i></span></button>
                </div>
            </div>
        </div>

        <div class="bg_white white_box p-4 more-box">
            <h3>{{ document.blockByFieldKey('title1') }}</h3>
            <div class="desc-wrapper">
                <div class="desc">
                    <div class="content">
                        {{ document.blockByFieldKey('text2') | raw }}
                    </div>
                    <div class="content">
                        {{ document.blockByFieldKey('text3') | raw }}
                        <a target="_blank" href="https://istanbultouristpass.com/cdn-cgi/l/email-protection#71121e1f0510120531180205101f13041d051e0403180205011002025f121e1c" class="btn btn-secondary">Apply</a>
                    </div>

                </div>
            </div>
            <button class="more-info btn btn-primary"><span class="more">More <i class="fa fa-chevron-down"></i></span><span class="less">Less  <i class="fa fa-chevron-up"></i></span></button>
        </div>

        <div class="bg_white white_box p-4 more-box">
            <h3>{{ document.blockByFieldKey('title3') }}</h3>
            <div class="desc-wrapper">
                <div class="desc">
                    <div class="content">
                        {{ document.blockByFieldKey('text4') | raw }}
                    </div>
                    <div class="content">
                        <h3>{{ document.blockByFieldKey('title5') }}</h3>
                        {{ document.blockByFieldKey('text5') | raw }}
                        <a target="_blank" href="https://istanbultouristpass.com/cdn-cgi/l/email-protection#71121e1f0510120531180205101f13041d051e0403180205011002025f121e1c" class="btn btn-secondary">Apply</a>
                    </div>
                </div>
            </div>
            <button class="more-info btn btn-primary">
                <span class="more">More <i class="fa fa-chevron-down"></i></span><span class="less">Less  <i class="fa fa-chevron-up"></i></span>
            </button>
        </div>
    </div>

    <div class="container">
        <div class="col-lg-12">

            <div class="row">
                <div class="col-12 col-lg-12">
                    <div class="text-center pt-4">
                        <div class="">
                            <div class="row">
                                {% include 'app/main/snip/review.html.twig' %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 offset-lg-3 mt-5">
                    <div class="text-center py-4 footer_icons">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">

                                    <div class="row">
                                        {% include 'app/main/snip/menu_pagebottom.twig' %}
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>
{% endblock %}