                    <p class="gr_text">{{ document.blockByFieldKey('text3') | raw }}</p>
                    <div class="swiper attraction_carousel_centered mt-4">
                        <div class="swiper-wrapper">

                            {%  for istanbulGuidedMuseum in istanbulGuidedMuseums %}
                                {% if istanbulGuidedMuseum.price is not null %}
                                    {% set priceType = 'Normal Ticket Value ' %}
                                    {% set value =  'â‚¬' ~  istanbulGuidedMuseum.price%}
                                {% else %}
                                    {% set priceType = '' %}
                                    {% set value =  'Priceless' %}
                                {% endif %}
                                <div class="swiper-slide">
                                    <a href="{{ path('attraction_detail',{'slug': istanbulGuidedMuseum.slug }) }}">
                                        <div class="attraction_item_rev" style="background: url('{{ asset( istanbulGuidedMuseum.thumbnail ) }}'); " >
                                            <h5>{{ istanbulGuidedMuseum.category }}</h5>
                                        </div>
                                        {% if istanbulGuidedMuseum.badge is not empty %}
                                            <div class="att_home_icons">
                                                <h5>{{ istanbulGuidedMuseum.badge }}</h5>
                                            </div>
                                        {% endif %}
                                    </a>

                                    <h4 class="mb-3" style="height: 56px"><a href="{{ path('attraction_detail',{'slug': istanbulGuidedMuseum.slug }) }}">{{ istanbulGuidedMuseum.title }}</a></h4>

                                    <p class="mb-2 mb-0 text-left">{{ priceType }} <b>{{ value }}</b></p>

                                    <p class="ld text-left">
                                        <strong>
                                            {% if istanbulGuidedMuseum.dipNote  is not empty %}
                                                {{ istanbulGuidedMuseum.dipNote | raw }}
                                            {% else %}
                                                {{ document.blockByFieldKey('topAttText') | raw }}
                                            {% endif %}
                                        </strong>
                                    </p>
                                </div>
                            {% endfor %}

                        </div>

                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>

                    </div>
                </div>

            </div>

        </div>
    </div>
