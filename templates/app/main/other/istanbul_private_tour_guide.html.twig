{% extends 'app/base.html.twig' %}
{% block body %}

    {% if document.title1 or document.title2 %}
        <div class="text-center pt-4">
            <div class="container">
                <div class="row">
                    <div class="mx-auto col-md-12">
                        <h1 class="mb-3">{{ document.title1 }}</h1>
                        <p class="gr_text">{{ document.title2 }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="container mb-3 mt-4">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb breadcrumb-text">
                    <a href="{{ path('homepage') }}">Home</a>&nbsp; / &nbsp;<span>{{ document.pageName }}</span>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="bg_white white_box p-4 mb-4">
            <h4 class="mb-3 page-title">{{ document.blockByFieldKey('title1') }}</h4>
            <div class="">
                <div class="">
                    <p class="">{{ document.blockByFieldKey('text1') | raw }}</p>

                    <p>{{ document.blockByFieldKey('text2') | raw }}</p>

                    <form action="">
                        <div class="form-group">
                            <label for="">Name</label>
                            <input type="text" class="form-control" required>
                        </div>

                        <div class="form-group">
                            <label for="">Email</label>
                            <input type="email" class="form-control" id="" required>
                        </div>

                        <div class="form-group mt-4">
                            <label for="">Your message...</label>
                            <textarea class="form-control" id="" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-secondary">Let it flow!</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <div class="mt-4">&nbsp;</div>
    <div class="container">
        <div class="col-lg-12">

            <div class="row">
                <div class="col-12 col-lg-12">
                    <div class="text-center pt-4">
                        <div class="">
                            <div class="row">
                                {% include 'app/main/snip/review.html.twig' %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 offset-lg-3 mt-5">
                    <div class="text-center py-4 footer_icons">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">

                                    <div class="row">
                                        {% include 'app/main/snip/menu_pagebottom.twig' %}
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>
{% endblock %}