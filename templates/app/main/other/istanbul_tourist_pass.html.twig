                        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ document.pageName }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="">
                    <div class=" text-left">
                        <div class="">
                            <div class="row mt-3">
                            <div class="col-12">
                                <img data-src="{{ document.blockByFieldKey('leftimage1') }}" alt="" class="mb-4 img-p-s lazy">
                                <div class="text-left">
                                    <h3 title_back="Welcome">{{ document.blockByFieldKey('subtitle') }}</h3>
                                    {{ document.blockByFieldKey('text1') | raw }}
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="video_img mt-4 video_ist_item img-p-s vlimg">
                                    <a class="video-btn" href="{{ document.blockByFieldKey('videoUrl') }}">
                                        <img class="d-block mx-auto lazy" data-src="{{ document.blockByFieldKey('videoImage') }}">
                                    </a>
                                </div>
                                <div class="text-left mt-4">
                                    {{ document.blockByFieldKey('text2') | raw }}
                                </div>
                            </div>

                                    <div class="col-md-12 mt-4">

