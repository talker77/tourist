                                </div>
                                </div>


                            </div>

                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bg_white p-4 my-5">

                    <img class="w-100 mb-4 lazy" data-src="{{ asset('app/images/img_itp_1.jpg') }}">

                    <h3 class="mb-3">{{ document.blockByFieldKey('title2') | raw}}</h3>

                    <div class="check_list_cont">
                        {{ document.blockByFieldKey('text5') | raw }}
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="">
                    {{ render(controller(
                        'App\\Controller\\App\\PartialController::faq', {max: 3}
                    )) }}
                </div>
            </div>
        </div>


    </div>

<div class="container-fluid mt-3">
    <hr>
</div>


    <div class="container">
        <div class="col-lg-12">

            <div class="row">
                <div class="col-12 col-lg-12">
                    <div class="text-center pt-4">
