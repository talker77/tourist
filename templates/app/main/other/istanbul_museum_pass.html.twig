{% extends 'app/base.html.twig' %}
{% block body %}

    {% if document.title1 or document.title2 %}
        <div class="text-center pt-4">
            <div class="container">
                <div class="row">
                    <div class="mx-auto col-md-12">
                        <h1 class="mb-3">{{ document.title1 }}</h1>
                        <p class="gr_text">{{ document.title2 }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="container mb-3 mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ document.pageName }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="">
                    <div class=" text-center">
                        <div class="">

                            <h2 class="mb-3 page-title text-center">{{ document.blockByFieldKey('title1') }}</h2>


                            <div class="col-12 mt-3">

                                <img class="mb-4 img-p-s lazy" data-src="{{ document.blockByFieldKey('image1') }}" alt="">

                                <div class="text-left">
                                    {{ document.blockByFieldKey('text1') | raw }}
                                </div>
                                <div class="mb-4">
                                    <div class="row mt-0 mb-5">
                                        <div class="col-12">
                                            <div class="swiper museum_pass_slider mt-4">
                                                <div class="swiper-wrapper">
                                                    <div class="swiper-slide">
                                                        <div class="bg_white box_w_image">
                                                            <div class="attraction_item_rev lazy" data-src="{{ document.blockByFieldKey('topkapiImage') }}">
                                                            </div>
                                                            <div class="p-4">
                                                                <a href="{{ document.blockByFieldKey('topkapiUrl') }}"><h3 class="title_w_line" style="height: 75px">{{ document.blockByFieldKey('topkapiTitle') }}</h3></a>
                                                                <p class="mb-0 text-left">
                                                                    {{ document.blockByFieldKey('topkapiText') | striptags  }}...
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="swiper-slide">
                                                        <div class="bg_white box_w_image">
                                                            <div class="attraction_item_rev lazy" data-src="{{ document.blockByFieldKey('hagiaImage') }}">
                                                            </div>
                                                            <div class="p-4">
                                                                <a href="{{ document.blockByFieldKey('hagiaUrl') }}"><h3 class="title_w_line" style="height: 75px">{{ document.blockByFieldKey('hagiaTitle') }}</h3></a>
                                                                <p class="mb-0 text-left">
                                                                    {{ document.blockByFieldKey('hagiaText') | striptags  }}
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="swiper-slide">
                                                        <div class="bg_white box_w_image">
                                                            <div class="attraction_item_rev lazy" data-src="{{ document.blockByFieldKey('archaeologicalImage') }}">

                                                            </div>
                                                            <div class="p-4">
                                                                <a href="{{ document.blockByFieldKey('archaeologicalUrl') }}"><h3 class="title_w_line" style="height: 75px">{{ document.blockByFieldKey('archaeologicalTitle') }}</h3></a>
                                                                <p class="mb-0 text-left">
                                                                    {{ document.blockByFieldKey('archaeologicalText') | striptags  }}
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="swiper-slide">
                                                        <div class="bg_white box_w_image">
                                                            <div class="attraction_item_rev lazy" data-src="{{ document.blockByFieldKey('galataImage') }}">

                                                            </div>
                                                            <div class="p-4">
                                                                <a href="{{ document.blockByFieldKey('galataUrl') }}"><h3 class="title_w_line" style="height: 75px">{{ document.blockByFieldKey('galataTitle') }}</h3></a>
                                                                <p class="mb-0 text-left">
                                                                    {{ document.blockByFieldKey('galataText') | striptags }}
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="swiper-slide">
                                                        <div class="bg_white box_w_image">
                                                            <div class="attraction_item_rev lazy" data-src="{{ document.blockByFieldKey('mosaicsImage') }}">
                                                            </div>
                                                            <div class="p-4">
                                                                <a href="{{ document.blockByFieldKey('mosaicsUrl') }}"><h3 class="title_w_line" style="height: 75px">{{ document.blockByFieldKey('mosaicsTitle') }}</h3></a>
                                                                <p class="mb-0 text-left">
                                                                    {{ document.blockByFieldKey('mosaicsText') | striptags  }}
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="swiper-slide">
                                                        <div class="bg_white box_w_image">
                                                            <div class="attraction_item_rev lazy" data-src="{{ document.blockByFieldKey('artsImage') }}">
                                                            </div>
                                                            <div class="p-4">
                                                                <a href="{{ document.blockByFieldKey('artsUrl') }}"><h3 class="title_w_line" style="height: 75px">{{ document.blockByFieldKey('artsTitle') }}</h3></a>
                                                                <p class="mb-0 text-left">
                                                                    {{ document.blockByFieldKey('artsText') | striptags  }}
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="swiper-slide">
                                                        <div class="bg_white box_w_image">
                                                            <div class="attraction_item_rev lazy" data-src="{{ document.blockByFieldKey('scienceImage') }}">
                                                            </div>
                                                            <div class="p-4">
                                                                <a href="{{ document.blockByFieldKey('scienceUrl') }}"><h3 class="title_w_line" style="height: 75px">{{ document.blockByFieldKey('scienceTitle') }}</h3></a>
                                                                <p class="mb-0 text-left">
                                                                    {{ document.blockByFieldKey('scienceText') | striptags }}
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="swiper-slide">
                                                        <div class="bg_white box_w_image">
                                                            <div class="attraction_item_rev lazy" data-src="{{ document.blockByFieldKey('galataMevleviImage') }}">
                                                            </div>
                                                            <div class="p-4">
                                                                <a href="{{ document.blockByFieldKey('galataMevleviUrl') }}"><h3 class="title_w_line" style="height: 75px">{{ document.blockByFieldKey('galataMevleviTitle') }}</h3></a>
                                                                <p class="mb-0 text-left">
                                                                    {{ document.blockByFieldKey('galataMevleviText') | striptags }}
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="swiper-button-next"></div>
                                                <div class="swiper-button-prev"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-5">
                                    <div class="video_img video_ist_item mb-4 img-p-s">
                                        <a class="video-btn" href="{{ document.blockByFieldKey('videoUrl') }}">
                                            <img class="d-block mx-auto lazy" data-src="{{ document.blockByFieldKey('videoImage') }}">
                                        </a>
                                    </div>
                                    <div class="text-left mb-4">
                                        <h2>{{ document.blockByFieldKey('title2') }}</h2>

                                        {{ document.blockByFieldKey('text2') | raw }}
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row mb-4">
            <div class="col-12">
                <div class="bg_white white_box p-4">
                    <div class="table_responsive">
                        {{ document.blockByFieldKey('table1') | raw }}
                    </div>
                </div>
            </div>
        </div>

        {{ document.blockByFieldKey('table2') | raw }}

        <div class="row">
            <div class="col-12">
                <div class="">
                    {{ render(controller(
                        'App\\Controller\\App\\PartialController::faq', {max: 3}
                    )) }}
                </div>
            </div>
        </div>


    </div>
    <div class="mt-4">&nbsp;</div>
    <div class="container">
        <div class="col-lg-12">

            <div class="row">
                <div class="col-12 col-lg-12">
                    <div class="text-center pt-4">
                        <div class="">
                            <div class="row">
                                {% include 'app/main/snip/review.html.twig' %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 offset-lg-3 mt-5">
                    <div class="text-center py-4 footer_icons">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">

                                    <div class="row">
                                        {% include 'app/main/snip/menu_pagebottom.twig' %}
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>
{% endblock %}