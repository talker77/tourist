{% extends 'app/base.html.twig' %}
{% block body %}
    {% if document.title1 or document.title2 %}
    <div class="text-center pt-4">
        <div class="container">
            <div class="row">
                <div class="mx-auto col-md-12">
                    <h1 class="mb-3">{{ document.title1 }}</h1>
                    <p class="gr_text">{{ document.title2 }}</p>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
    <div class="container mb-3 mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ document.pageName }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!--
    <div class="blue-box-fullw-solid mb-4">
        <p>{{ document.blockByFieldKey('headtext1') }}</p>
    </div>
    -->

    <div class="container">



        <div class="bg_white white_box p-4 mb-4">
            <h4 class="mb-3 page-title">{{ document.blockByFieldKey('title1') }}</h4>
            <div class="">
                <div class="">
                    {{ document.blockByFieldKey('text1') | raw }}
                </div>
            </div>
        </div>



        <div class="row">
            <div class="col-12">
                <div class="bg_white white_box p-4 mb-4">
                    <h5 class="mb-3 cur_text">{{ document.blockByFieldKey('title2') }}</h5>
                    <div class="">
                        <div class="">
                            {{ document.blockByFieldKey('text2') | raw }}

                        </div>


                        <form action="" id="freefrm" class="mt-4" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="">Full name *</label>
                                <input type="text" class="form-control" id="fullname" name="fullname" required>
                            </div>

                            <div class="form-group">
                                <label for="">Email *</label>
                                <input type="email" class="form-control"  id="email" name="email" required>
                            </div>

                            <div class="form-group">
                                <label for="">Planned visit date</label>
                                <input type="text" class="form-control"  id="visit_date" name="visit_name">
                            </div>

                            <div class="form-group">
                                <label for="">Visit duration / days</label>
                                <input type="number" class="form-control"  id="visit_days" name="visit_days">
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="agree" name="agree">
                                <label class="form-check-label" for="defaultCheck1">
                                    I want to receive emails to help me plan my trip to Istanbul, including attraction updates, itineraries & exclusive Istanbul E-pass holder discounts on theatre shows, tours, and other city passes in adherence to our data policy. We do not sell your data.
                                </label>
                            </div>

                            <div class=" text-center mt-3">
                                <button type="submit" class="btn btn-secondary">Submit</button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
<hr>
            <div class="col-12">
                {{ render(controller(
                    'App\\Controller\\App\\PartialController::faq', {max: 3}
                )) }}
            </div>

        </div>


    </div>
    <div class="mt-4">
        <hr>
    </div>

    <div class="container">
        <div class="col-lg-12">

            <div class="row">
                <div class="col-12 col-lg-12">
                    <div class="text-center pt-4">
                        <div class="">
                            <div class="row">
                                {% include 'app/main/snip/review.html.twig' %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 offset-lg-3 mt-5">
                    <div class="text-center py-4 footer_icons">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">

                                    <div class="row">
                                        {% include 'app/main/snip/menu_pagebottom.twig' %}
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#freefrm').validate({
                rules: {
                    fullname: {
                        required: true,
                        maxlength: 100
                    },
                    email: {
                        required: true,
                        email: true,
                        maxlength: 100
                    }
                }
            });

            $("#freefrm").on('submit',function () {
                if (!($('#freefrm').valid())) {
                    return false;
                }
            });

        });
    </script>
{% endblock %}