{% extends 'app/base.html.twig' %}
{% block body %}

    {% if document.title1 or document.title2 %}
        <div class="text-center pt-4">
            <div class="container">
                <div class="row">
                    <div class="mx-auto col-md-12">
                        <h1 class="mb-3">{{ document.title1 }}</h1>
                        <p class="gr_text">{{ document.title2 }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="container mb-3 mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ document.pageName }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!--
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="yellow-box-solid mb-4">
                    <h3>{{ document.blockByFieldKey('title1') }}</h3>
                    <p>{{ document.blockByFieldKey('text1') | raw }}</p>
                </div>
            </div>
        </div>
    </div>
    -->
    <div class="container mt-3">

        <div class="row">
            <div class="col-12 col-md-6 mt-3">
                <div class="bg_white white_box p-4 mb-4">
                    <h4 class="mb-3 page-title">{{ document.blockByFieldKey('title2') }}</h4>
                    <div class="">
                        <div class="">
                            {{ document.blockByFieldKey('text2') | raw }}

                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="map_zoom mb-4 mt-3 text-center">
                    <a href="{{ path('browse_attractions_map') }}" class="b-block"></a>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d752.4176283664993!2d28.98967512922926!3d41.032463910352114!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab77c84423ec5%3A0x715f1e54fdc98365!2s%C3%96mer%20Avni%2C%20Meclis-i%20Mebusan%20Cd.%2079b%2C%2034427%20Beyo%C4%9Flu%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1577361776864!5m2!1str!2str" width="100%" height="250" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
                </div>
            </div>

        </div>
            {{ render(controller(
                'App\\Controller\\App\\PartialController::faq', {max: 3}
            )) }}

    </div>
    <div class="mt-5">
        <hr>
    </div>
    <div class="container">
        <div class="col-lg-12">

            <div class="row">
                <div class="col-12 col-lg-12">
                    <div class="text-center pt-4">
                        <div class="">
                            <div class="row">
                                {% include 'app/main/snip/review.html.twig' %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 offset-lg-3 mt-5">
                    <div class="text-center py-4 footer_icons">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">

                                    <div class="row">
                                        {% include 'app/main/snip/menu_pagebottom.twig' %}
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>
{% endblock %}