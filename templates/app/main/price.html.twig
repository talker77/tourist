    <div class="container pricepop mb-3 mt-1">
        {% set k = 20 %}
        <form method="get" action="https://online.istanbultouristpass.com/payment">
            <input type="hidden" name="product" id="product" value="" tabindex="0">
            <input type="hidden" id="adultsale" value="">
            <input type="hidden" id="adultprice" value="">
            <input type="hidden" id="childsale" value="">
            <input type="hidden" id="childprice" value="">
            <div class="bg_white col-md-8 offset-md-2">
            <div class="row pt-3 pb-3">
                <div class="col-md-6 col-xs-12">
                    <div class=" rightline">
                        <h5 class="title text-center"><span class="popdays">2</span> Days Pass</h5>
                        <div class="row font12">
                            <div class="col-4">Pass</div>
                            <div class="col-4">Quantity</div>
                            <div class="col-4">Total</div>
                        </div>
                        <div class="row">
                            <div class="col-4"><h4>Adult(12+)</h4></div>
                            <div class="col-4">
                                <select class="form-control mb-2" name="adults" id="adults">
                                    {% for i in range(1, k) %}
                                        <option value="{{ i }}">{{ i }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-4"><h3 id="adult_price"></h3></div>
                        </div>
                        <input type="hidden" name="saving" id="saving" value="0">
                        <div class="row">
                            <div class="col-4"><h4>Child(5-12)</h4></div>
                            <div class="col-4">
                                <select class="form-control mb-2" name="children" id="children">
                                    {% for i in range(0, k) %}
                                        <option value="{{ i }}">{{ i }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-4"><h3 id="child_price">€0</h3></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xs-12">
                    <div class="text-center">Order Summery</div>
                    <div class="row font12red">
                        <div class="col-6">Sale Discount</div>
                        <div class="col-6 text-right" id="sale_discount">-€10</div>
                    </div>
                    <div class="row" style="padding: 10px 0;">
                        <div class="col-6 font-weight-bolder"><h4>Order Total</h4></div>
                        <div class="col-6 text-right font-weight-bolder"><h4 id="order_total">€135</h4></div>
                    </div>
                    <div><input type="submit" class="form-control btn btn-secondary d-block" value="Check Out"></div>
                </div>
            </div>
