{% extends 'app/base.html.twig' %}
{% block stylesheets %}
    <style>
        .hide_banner {
            display: none;
        }
        .ul_menu_inline li {
            display: inline;
        }
    </style>
{% endblock %}

{% block body %}
    {% set category = attraction.category.title %}
    {% set global_category = attraction.category.title %}

    {% include 'app/main/services/service_title.html.twig' with {'page' :  attraction.title } %}
    {% include 'app/main/services/service_gallery.html.twig' with {'images' : attraction.images , 'title' : attraction.title} %}
    <div class="bg_white white_box mb-0 p-5 disc-p">

        <div class="container">
            <div class="row d-flex">
                <div class="col-12 col-lg-12 justify-content-center align-self-center">
                    <div class="text-left">
                        <p itemprop="description">{{ attraction.description | raw }}</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="container">

        <div class="text-center p-4 blue_text_t mt-4">
            <p style="margin: 0;">Buy <a href='{{ path('homepage') }}'>Istanbul Tourist PassÂ®</a> to get free <b>{{ attraction.title }}</b> &amp; <a href='{{ path('attraction_index') }}'>more</a>..
            </p>
            <a href="/istanbul-pass" class="btn btn-secondary">Buy a Pass</a>
        </div>
    </div>


    <div class="pb-2 mt-4">
        <div class="container">
            <div class="row">
                <div class="col-12 pb-4">
                    <div class="numbers_slider_cont">

                        <div class="swiper numbers_slider swiper-initialized swiper-horizontal swiper-pointer-events">
                            <div class="swiper-wrapper" id="swiper-wrapper-a13ce898fb7f8c2b" aria-live="off">


                                <div  style="width: 347px; margin-right: 30px;" role="group" aria-label="1 / 3">
                                    <div class="numbers_slider_item" style="height: 220px">
                                        <div>
                                            <h5>Included in the Pass</h5>
                                            <p>{{ attraction.admission | raw }}</p>
                                            <a class="btn btn-primary" href="/istanbul-pass">Buy a Pass</a>
                                        </div>
                                    </div>
                                </div>

                                <div  style="width: 347px; margin-right: 30px;" role="group" aria-label="2 / 3">
                                    <div class="numbers_slider_item" style="height: 220px">
                                        <div>
                                            <h5>98.7</h5>
                                            <p>When to use?</p>
                                            <p>{{ attraction.hours | raw }}</p>
                                        </div>
                                    </div>
                                </div>

                                <div  style="width: 347px; margin-right: 30px;" role="group" aria-label="3 / 3">
                                    <div class="numbers_slider_item" style="height: 220px">
                                        <div>
                                            <h5>Where to use?</h5>
                                            <p>{{ attraction.gettingthere | raw }}</p>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bg_white white_box mb-0 p-5 disc-p">

        <div class="container">
            <div class="row d-flex">
                <div class="col-12 col-lg-12 justify-content-center align-self-center">
                    <div class="text-left">
                        <h2 class="uppercase mb16">Remember</h2>
                        <p>
                            {{ attraction.remark | raw }}
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}