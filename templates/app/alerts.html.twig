{% for flashMessage in app.session.flashbag.get('error') %}
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            swal({
                title: "Important! ",
                text: "{{ flashMessage }}",
                icon: "error",
                button: "close",
            });
        });
    </script>
{% endfor %}
